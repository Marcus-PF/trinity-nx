# Run the container with `docker run -p 3000:3000 -t @trinity/server`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system @trinity/server && \
          adduser --system -G @trinity/server @trinity/server

COPY apps/server/dist @trinity/server/
RUN chown -R @trinity/server:@trinity/server .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix @trinity/server --omit=dev -f install

CMD [ "node", "@trinity/server" ]
