{
  "name": "@trinity/server",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "node-env=development"
            ]
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@trinity/server:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@trinity/server:build:development"
          },
          "production": {
            "buildTarget": "@trinity/server:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "docker-build": {
        "dependsOn": [
          "build"
        ],
        "command": "docker build -f apps/server/Dockerfile . -t @trinity/server"
      }
    }
  },
  "dependencies": {
    "@trinity/api-client": "workspace:*",
    "@trinity/auth": "workspace:*",
    "@trinity/config-prettier": "workspace:*",
    "@trinity/config-typescript": "workspace:*",
    "@trinity/i18n": "workspace:*",
    "@trinity/locales": "workspace:*",
    "@trinity/types": "workspace:*",
    "@nestjs/common": "^10.3.10",
    "@nestjs/core": "^10.3.10",
    "@nestjs/platform-express": "^10.3.10"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "@types/node": "^20"
  }
}
