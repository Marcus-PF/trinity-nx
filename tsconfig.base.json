// tsconfig.base.json (located in monorepo root)
{
  "extends": "./libs/config-typescript/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@trinity/api-client/*": ["libs/api-client/src/*"],
      "@trinity/auth/*": ["libs/auth/src/*"],
      "@trinity/config-eslint": ["libs/config-eslint/index.mjs"],
      "@trinity/config-eslint/*": ["libs/config-eslint/*"],
      "@trinity/config-prettier": ["libs/config-prettier/index.js"],
      "@trinity/config-typescript/*": ["libs/config-typescript/*"],
      "@trinity/docs": ["apps/docs/src"],
      "@trinity/forum-web": ["apps/forum-web/src"],
      "@trinity/hooks/*": ["libs/hooks/src/*"],
      "@trinity/i18n/*": ["libs/i18n/src/*"],
      "@trinity/locales/*": ["libs/locales/src/*"],
      "@trinity/server": ["apps/server/src"],
      "@trinity/types/*": ["libs/types/src/*"],
      "@trinity/ui": ["libs/ui/src/index.ts"],
      "@trinity/ui/*": ["libs/ui/src/*"],
      "@trinity/utils/*": ["libs/utils/src/*"]
    }
  }
}
